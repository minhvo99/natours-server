{
   "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./publict",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types"],
      "types": [
         "node",
         "express",
         "jsonwebtoken",
         "multer",
         "cors",
         "morgan",
         "validator",
         "bcryptjs",
         "nodemailer",
         "pug",
         "html-to-text"
      ]
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules", "publict"]
}
